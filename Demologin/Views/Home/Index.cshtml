@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="py-5 text-center bg-light">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to AGROTrade Hub</h1>
        <p class="lead text-muted mx-auto mb-4" style="max-width: 700px;">
            Your trusted platform for seamless agricultural trade. Connecting farmers directly to markets for better prices and efficiency.
        </p>
        <a class="btn btn-success btn-lg me-2" asp-area="Identity" asp-page="/Account/Register">Join Now</a>
        <a class="btn btn-outline-success btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
</div>

<!-- Features Section -->
<div class="py-5 bg-white">
    <div class="container text-center">
        <h2 class="fw-bold">What We Offer</h2>
        <p class="lead text-muted mb-5">A platform built on trust, transparency, and technology.</p>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success">Direct Connections</h5>
                        <p class="card-text">Connect directly with a wide network of verified buyers and sellers.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success">Fair Pricing</h5>
                        <p class="card-text">Get the best market prices without middlemen, ensuring fair trade for all.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success">Easy Transactions</h5>
                        <p class="card-text">Our secure and intuitive platform makes trading simple and efficient.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="py-5 text-center bg-success text-white">
    <div class="container">
        <h2 class="fw-bold">Ready to Transform Your Trading?</h2>
        <p class="lead mb-4">Sign up today and experience the future of agricultural commerce.</p>
        <a class="btn btn-light btn-lg fw-bold" asp-area="Identity" asp-page="/Account/Register">Get Started Free</a>
    </div>
</div>
