@{
    ViewData["Title"] = "Home Page";
} 

<!-- Hero Section -->
<div class="d-flex align-items-center min-vh-100 bg-gradient" 
     style="background: linear-gradient(135deg, #e8f5e9, #f1f8e9);">
    <div class="container px-5">
        <div class="row align-items-center">
            
            <!-- Left: Text -->
            <div class="col-md-6 text-center text-md-start mb-5 mb-md-0">
                <h1 class="display-3 fw-bold text-success mb-3">
                    Welcome to <span class="text-dark">AGROTrade Hub</span>
                </h1>
                <p class="lead text-muted mb-4" style="max-width: 520px;">
                    Your trusted platform for seamless agricultural trade.  
                    Connecting farmers directly to markets for better prices and efficiency.
                </p>
                
                <div class="d-flex justify-content-center justify-content-md-start">
                    <a class="btn btn-success btn-lg px-4 me-3 shadow-sm transition"
                       asp-area="Identity" asp-page="/Account/Register">
                        🌱 Join Now
                    </a>
                    <a class="btn btn-outline-success btn-lg px-4 transition"
                       asp-area="Identity" asp-page="/Account/Login">
                        Login
                    </a>
                </div>
            </div>
            
           
        </div>
    </div>
</div>

