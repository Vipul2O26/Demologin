@{
    Layout = "~/Views/Shared/_LayoutFarmer.cshtml";
}

<!-- Main Content -->
<div class="main-content">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Dashboard Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="dashboard-card card-green">
                <h5><i class="fas fa-seedling"></i> My Crops</h5>
                <p>Manage and update your listed crops.</p>
                <a class="btn btn-light btn-sm" asp-controller="Farmer" asp-action="Crops">Go</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="dashboard-card card-blue">
                <h5><i class="fas fa-chart-line"></i> Market Prices</h5>
                <p>Check latest crop market rates.</p>
                <a class="btn btn-light btn-sm" asp-controller="Farmer" asp-action="Market">View</a>
            </div>
        </div>
