@model IEnumerable<Demologin.Models.Product>

@{
    Layout = "~/Views/Shared/_LayoutFarmer.cshtml";
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h2 class="fw-bold text-success m-0">
            <i class="bi bi-shop-window me-2"></i> Farmer Dashboard
        </h2>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-success btn-lg px-4 shadow-sm rounded-pill">
            <i class="bi bi-cart-check-fill me-2"></i> View Cart
        </a>
    </div>

    <!-- Products Grid -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100 border-0 shadow-sm product-card-new rounded-4 overflow-hidden">

                    <!-- Product Image -->
                    <div class="bg-light d-flex align-items-center justify-content-center p-3 border-bottom"
                         style="height: 220px;">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="~/uploads/@item.ImageUrl" alt="@item.Title"
                                 class="img-fluid rounded-3"
                                 style="max-height: 100%; object-fit: contain;" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No Image Available</span>
                        }
                    </div>

                    <!-- Product Info -->
                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="card-title text-dark fw-bold mb-2">@item.Title</h5>

                        <!-- Price Section -->
                        <div class="mb-3">
                            @if (item.DiscountPercentage > 0)
                            {
                                <div class="d-flex justify-content-center align-items-baseline gap-2">
                                    <span class="text-muted text-decoration-line-through small">
                                        ₹ @item.Price
                                    </span>
                                    <span class="text-success fw-bold fs-5">
                                        ₹ @(item.Price - (item.Price * item.DiscountPercentage / 100))
                                    </span>
                                    <span class="badge bg-success-subtle text-success rounded-pill">
                                        -@item.DiscountPercentage%
                                    </span>
                                </div>
                            }
                            else
                            {
                                <span class="text-success fw-bold fs-5">
                                    ₹ @item.Price
                                </span>
                            }
                        </div>

                        <!-- Stock Info -->
                        <div class="mb-3">
                            @if (item.Stock <= item.Threshold)
                            {
                                <span class="badge bg-danger px-3 py-2 rounded-pill shadow-sm">
                                    Low Stock: @item.Stock left
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill shadow-sm">
                                    Stock: @item.Stock
                                </span>
                            }
                        </div>

                        <!-- Buttons -->
                        <div class="mt-auto d-grid gap-2">
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-outline-success rounded-pill">
                                    <i class="bi bi-cart-plus-fill me-2"></i> Add to Cart
                                </button>
                            </form>

                            <a asp-controller="Products" asp-action="ProductDetails" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary rounded-pill">
                                <i class="bi bi-info-circle me-2"></i> Details
                            </a>

                            <form asp-controller="Order" asp-action="BuyNow" method="post">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <button type="submit" class="btn btn-success rounded-pill">
                                    <i class="bi bi-bag-check-fill me-2"></i> Buy Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        background-color: #f8fdf8;
    }

    .product-card-new {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card-new:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12) !important;
        }

    .badge {
        font-size: 0.9rem;
    }

    .bg-success-subtle {
        background-color: #d4edda !important;
    }

    .bg-primary-subtle {
        background-color: #e2eafc !important;
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }
</style>
