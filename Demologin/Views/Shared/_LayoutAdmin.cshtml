@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand">⚙ Admin Panel</a>
            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                    <a class="list-group-item list-group-item-action" asp-controller="Admin" asp-action="Users">Manage Users</a>
                    <a class="list-group-item list-group-item-action" asp-controller="Admin" asp-action="Reports">Reports</a>
                </div>
            </div>
            <div class="col-md-9">
                <h2 class="mb-3">@ViewData["Title"]</h2>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
