@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar {
            min-height: 100vh;
            background: #212529;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                font-weight: 500;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    color: #fff;
                    background: #0d6efd;
                    border-radius: 8px;
                }

        .content-wrapper {
            flex-grow: 1;
            padding: 20px;
            background: #f8f9fa;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold"><i class="fa-solid fa-gears me-2"></i> Admin Panel</a>

            <!-- Hamburger toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-flex">
                <button type="submit" class="btn btn-outline-light btn-sm ms-2">
                    <i class="fa-solid fa-right-from-bracket me-1"></i> Logout
                </button>
            </form>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Dashboard" ? "active" : "")"
                               asp-controller="Admin" asp-action="Dashboard">
                                <i class="fa-solid fa-chart-line me-2"></i> Dashboard
                            </a>
                        </li>
                        <li>
                            <a class="nav-link @((ViewData["Title"] as string) == "Users" ? "active" : "")"
                               asp-controller="Admin" asp-action="Users">
                                <i class="fa-solid fa-users me-2"></i> Manage Users
                            </a>
                        </li>
                        <li>
                            <a class="nav-link @((ViewData["Title"] as string) == "Reports" ? "active" : "")"
                               asp-controller="Admin" asp-action="Reports">
                                <i class="fa-solid fa-file-lines me-2"></i> Reports
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content-wrapper">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h2 class="mb-4">@ViewData["Title"]</h2>
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- ✅ Push session values into browser sessionStorage -->
    <script>
        sessionStorage.setItem("UserId", "@(Context.Session.GetString("UserId") ?? "")");
        sessionStorage.setItem("Email", "@(Context.Session.GetString("Email") ?? "")");
        sessionStorage.setItem("Role", "@(Context.Session.GetString("Role") ?? "")");
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
