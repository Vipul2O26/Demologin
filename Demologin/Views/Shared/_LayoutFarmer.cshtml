@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html>
<head>
    <title>Farmer Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: #f3f6f9;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        /* Navbar */
        .navbar-custom {
            background: linear-gradient(90deg, #2c6e49, #4caf50);
            padding: 0.8rem 1rem;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
        }

        .navbar-brand {
            font-weight: bold;
            color: white !important;
            display: flex;
            align-items: center;
        }

            .navbar-brand i {
                margin-right: 8px;
            }

        .navbar-nav .nav-link {
            color: #f1f1f1 !important;
            font-weight: 500;
            margin: 0 0.5rem;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                background: rgba(255, 255, 255, 0.15);
                color: #fff !important;
            }

        .profile-info {
            color: white;
            margin-right: 1rem;
            text-align: right;
        }

            .profile-info small {
                font-size: 0.8rem;
                color: #e0e0e0;
            }

        .logout-btn button {
            background-color: #ff4d4d;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 6px;
            padding: 0.4rem 0.8rem;
            transition: 0.3s;
        }

            .logout-btn button:hover {
                background-color: #e63939;
            }

        /* Main content */
        .main-content {
            padding: 2rem;
            margin-top: 70px; /* offset for fixed navbar */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-seedling"></i> AGROTrade Hub
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Navigation links -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Farmer" asp-action="Dashboard">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                            <i class="fas fa-user-cog"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-box-open"></i> My Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Create">
                            <i class="fas fa-plus-circle"></i> Add New Product
                        </a>
                    </li>
                </ul>

                <!-- Profile & Logout -->
                <div class="d-flex align-items-center">
                    <div class="profile-info me-2">
                        <div>@user?.Email</div>
                        <small>Farmer Panel</small>
                    </div>
                    <div class="logout-btn">
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link" style="cursor:pointer;">Logout</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Store session values in JS
        sessionStorage.setItem("UserId", "@Context.Session.GetString("UserId")");
        sessionStorage.setItem("Email", "@Context.Session.GetString("Email")");
        sessionStorage.setItem("Role", "@Context.Session.GetString("Role")");
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
