@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html>
<head>
    <title>Farmer Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: #f3f6f9;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        /* Navbar */
        .navbar-custom {
            background: linear-gradient(90deg, #2c6e49, #4caf50);
            padding: 0.8rem 1rem;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
        }

        .navbar-brand {
            font-weight: bold;
            color: white !important;
            display: flex;
            align-items: center;
            font-size: 1.25rem;
        }

            .navbar-brand i {
                margin-right: 8px;
            }

        .navbar-nav .nav-link {
            color: #f1f1f1 !important;
            font-weight: 500;
            margin: 0 0.5rem;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                background: rgba(255, 255, 255, 0.2);
                color: #fff !important;
            }

        /* Profile dropdown */
        .dropdown-menu {
            border-radius: 8px;
            overflow: hidden;
        }

            .dropdown-menu a {
                font-size: 0.9rem;
                padding: 0.5rem 1rem;
            }

        /* Main content */
        .main-content {
            padding: 2rem;
            margin-top: 75px; /* offset for fixed navbar */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand" asp-controller="Farmer" asp-action="Dashboard">
                <i class="fas fa-seedling"></i> AGROTrade Hub
            </a>

            <!-- Toggler -->
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Farmer" asp-action="Dashboard">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
            
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-box-open"></i> My Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Create">
                            <i class="fas fa-plus-circle"></i> Add Product
                        </a>
                    </li>
                </ul>

                <!-- Profile + Logout -->
                <div class="dropdown">
                    <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle"></i> @user?.Email
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fas fa-user"></i> My Profile</a></li>
                        <li><a class="dropdown-item" asp-controller="Products" asp-action="Index"><i class="fas fa-box"></i> My Products</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                <button type="submit" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt"></i> Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
