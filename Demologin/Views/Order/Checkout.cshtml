@model IEnumerable<Demologin.Models.Order>

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_LayoutFarmer.cshtml";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-bag-check-fill"></i> Checkout
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No items to checkout.</div>
    }
    else
    {
        <table class="table table-bordered shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Product?.Title</td>
                        <td>₹ @order.Product?.Price</td>
                        <td>@order.Quantity</td>
                        <td class="fw-bold text-success">₹ @order.TotalAmount</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                    <td class="fw-bold text-success">
                        ₹ @Model.Sum(o => o.TotalAmount)
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-end gap-3 mt-4">
            <a asp-controller="Farmer" asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Continue Shopping
            </a>
            <a asp-controller="Order" asp-action="MyOrders" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Confirm Order
            </a>
        </div>
    }
</div>
