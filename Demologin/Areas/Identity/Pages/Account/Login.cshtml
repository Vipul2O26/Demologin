@page
@model Demologin.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">AGROTrade Hub</h2>
                <p class="text-muted">Sign in to continue</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="password" type="password" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" class="form-select rounded-3" aria-required="true">
                        <option value="">-- Select Role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Farmer">Farmer</option>
                    </select>
                    <label asp-for="Input.Role"></label>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Login Button -->
                <button id="login-submit" type="submit" class="btn btn-primary w-100 rounded-3 fw-semibold">
                    Log in
                </button>

                <!-- Register -->
                <div class="mt-3 text-center">
                    <p class="mb-1">Don't have an account?</p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary w-100 rounded-3">
                        Register here
                    </a>
                </div>
            </form>

            <!-- External Logins -->
            @if (Model.ExternalLogins?.Count > 0)
            {
                <hr class="my-4" />
                <div class="text-center">
                    <p class="text-muted">Or continue with</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark w-100 mb-2 rounded-3" name="provider" value="@provider.Name">
                                <i class="bi bi-box-arrow-in-right me-2"></i> @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
