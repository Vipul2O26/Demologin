@page

@model Demologin.Areas.Identity.Pages.Account.LoginModel


@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: url('/assets/dashboard.jpg') no-repeat center center fixed; /* fixed path */
        background-size: cover;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.85); /* Glassmorphism white */
        backdrop-filter: blur(6px);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .login-title {
        font-weight: bold;
        color: #198754; /* Bootstrap success green */
    }

    .btn-custom {
        border-radius: 10px;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-md-5">
        <div class="login-card">
            <h2 class="text-center login-title mb-4">🌱 AGROTrade Hub</h2>
            <form id="account" method="post">
                <h4 class="text-center text-dark mb-3">Log in to your account</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" type="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Farmer">Farmer</option>
                    </select>
                    <label asp-for="Input.Role">Role</label>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <!-- Submit -->
                <button id="login-submit" type="submit" class="w-100 btn btn-success btn-lg btn-custom">Log in</button>

                <!-- Register -->
                <div class="text-center mt-3">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold">
                        Register as a new user
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
